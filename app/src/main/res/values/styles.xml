        <item name="cornerSize">50%</item>
    </style>

    <style name="Style.Chip.Iconed.Outlined" parent="Style.Chip.Outlined">
        <item name="chipIconVisible">true</item>
        <item name="iconStartPadding">4dp</item>
    </style>

    <style name="Style.Chip.Outlined" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:checkable">false</item>
        <item name="chipSurfaceColor">@null</item>
        <item name="chipBackgroundColor">@null</item>
        <item name="chipStrokeColor">@color/clr_primary_30</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/clr_primary_85</item>
        <item name="checkedIconVisible">true</item>
