        <item name="android:background">@color/clr_transparent</item>
    </style>

<!--    <style name="Style.ShapeAppearance.Radius10" parent="ShapeAppearance.MaterialComponents">-->
    <style name="Style.ShapeAppearance.Radius10" parent="">
        <item name="cornerFamily">rounded</item>
